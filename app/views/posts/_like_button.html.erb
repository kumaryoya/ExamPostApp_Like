<% if current_user.like?(post) %>
  <%= link_to "UnLike", like_path(current_user.likes.find_by(post_id: post.id)), id: "js-like-button-for-post-#{post.id}", method: :delete %>
<% else %>
  <%= link_to "Like", likes_path(post_id: post.id), id: "js-like-button-for-post-#{post.id}", method: :post %>
<% end %>